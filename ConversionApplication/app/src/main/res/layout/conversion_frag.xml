<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.ConversionFragment">

    <TextView
        android:id="@+id/tv_heading_conversion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/frag_title_header"
        android:textSize="@dimen/sub_heading_text_size"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.465"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.038" />

    <TextView
        android:id="@+id/tv_sub_heading_usd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/currency_usd"
        android:textSize="@dimen/sub_heading_text_size"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_sub_heading_pln"
        app:layout_constraintHorizontal_bias="0.416"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_heading_conversion"
        app:layout_constraintVertical_bias="0.022" />

    <TextView
        android:id="@+id/tv_sub_heading_pln"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="116dp"
        android:text="@string/currency_pln"
        android:textSize="@dimen/sub_heading_text_size"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.882"
        app:layout_constraintStart_toEndOf="@+id/tv_heading_conversion"
        app:layout_constraintTop_toBottomOf="@+id/tv_heading_conversion"
        app:layout_constraintVertical_bias="0.01" />

    <TextView
        android:id="@+id/tv_usd_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/one_usd"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tv_sub_heading_usd"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toStartOf="@+id/tv_sub_heading_usd"
        app:layout_constraintTop_toBottomOf="@+id/tv_sub_heading_usd"
        app:layout_constraintVertical_bias="0.044" />

    <TextView
        android:id="@+id/tv_pln_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tv_sub_heading_pln"
        app:layout_constraintHorizontal_bias="0.275"
        app:layout_constraintStart_toStartOf="@+id/tv_sub_heading_pln"
        app:layout_constraintTop_toBottomOf="@+id/tv_sub_heading_pln"
        app:layout_constraintVertical_bias="0.044" />

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_usd_value"
        app:layout_constraintVertical_bias="0.049" />

</androidx.constraintlayout.widget.ConstraintLayout>
